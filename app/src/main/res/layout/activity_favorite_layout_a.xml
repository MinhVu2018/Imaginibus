<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteLayoutA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Pictures_header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/header_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_back" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_option"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_option" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/favorite_title"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="100" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count_picture" />

                <TextView
                    android:id="@+id/num_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" MB " />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/Pictures_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image13" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image14" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_below="@id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image11" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_below="@id/imageView2"
                    android:layout_toRightOf="@id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image12" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_below="@id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image06" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_toRightOf="@id/imageView5"
                    android:layout_below="@id/imageView4"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image05" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_below="@id/imageView5"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image01" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_toRightOf="@id/imageView7"
                    android:layout_below="@id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image02" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_below="@id/imageView7"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image03" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_below="@id/imageView8"
                    android:layout_toRightOf="@id/imageView9"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image04" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>