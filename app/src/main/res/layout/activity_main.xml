<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:background="@drawable/header_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="35sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_search" />

                <ImageButton
                    android:id="@+id/btn_option"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_option"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_gallery"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_gallery"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_video"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_video"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_location"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_favorite"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"  />

                <ImageButton
                    android:id="@+id/btn_secure"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_secure"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>