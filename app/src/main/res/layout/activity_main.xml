<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:background="@drawable/header_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="35sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_search" />

                <ImageButton
                    android:id="@+id/btn_option"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_option"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_gallery"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_gallery"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_video"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_video"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_location"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_location"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_favorite"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"  />

                <ImageButton
                    android:id="@+id/btn_secure"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/icon_black_secure"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/Pictures_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Camera" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image13" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image14" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/image11" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true">

                                <ImageButton
                                    android:id="@+id/btn_more_camera"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:background="#B91F1F1F"
                                    android:backgroundTint="#B91F1F1F"
                                    android:backgroundTintMode="multiply"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/icon_white_plus" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Messenger" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image01" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image02" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imageView6"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/image03" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true">

                                <ImageButton
                                    android:id="@+id/btn_more_camera2"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:background="#B91F1F1F"
                                    android:backgroundTint="#B91F1F1F"
                                    android:backgroundTintMode="multiply"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/icon_white_plus" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Facebook" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image06" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image04" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/image05" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true">

                                <ImageButton
                                    android:id="@+id/btn_more_camera3"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:background="#B91F1F1F"
                                    android:backgroundTint="#B91F1F1F"
                                    android:backgroundTintMode="multiply"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/icon_white_plus" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Instagram" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image11" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/image10" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/imageView12"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/phan_thiet" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true">

                                <ImageButton
                                    android:id="@+id/btn_more_camera1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="10dp"
                                    android:background="#B91F1F1F"
                                    android:backgroundTint="#B91F1F1F"
                                    android:backgroundTintMode="multiply"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/icon_white_plus" />
                            </RelativeLayout>
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>