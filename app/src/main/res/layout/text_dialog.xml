<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/ListColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/text">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/black_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/black"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/white_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/white"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/red_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/red"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/yellow_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/yellow"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/green_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/green"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/blue_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@color/blue"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_picker_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:src="@drawable/colors"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"
            android:focusable="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>